{
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.20.2",  // Current LTS (Long-Term Support) version
    "npm": "10.5.0"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",  // Must match React 18
    "react-router-dom": "6.22.1",  // Latest compatible with Node 18
    // Keep other existing dependencies
  },
  "scripts": {
    "start": "set SET NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
    "build": "set SET NODE_OPTIONS=--openssl-legacy-provider && GENERATE_SOURCEMAP=false CI=false react-scripts build",
    "predeploy": "npm install --legacy-peer-deps",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "rm -rf node_modules/.cache"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
